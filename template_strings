// **********  4. Template Strings -  **********

let nombre = 'Johan'
let cargo = 'QA AUTOMATION'
let empresa = 'Evolta'

let persona0 = nombre + cargo + empresa
console.log(persona0)

let persona = "Hola soy: " + nombre + " y soy " + cargo + " y trabajo en " + empresa;
console.log(persona)

let empleado = `Hola soy ${nombre} y tengo el cargo de ${cargo} y actualmente trabajo en ${empresa}`
console.log(empleado)